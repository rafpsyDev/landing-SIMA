---
interface Props {
    image: string;
    title: string;
    description: string;
}

const { image, title, description } = Astro.props;
---

<div class="flex flex-col items-center rounded-xl shadow-lg w-96 h-[600px]">
    <img
        src={image}
        class="w-[600px] h-[400px] object-cover rounded-t-xl"
        alt={title}
    />
    <div class="bg-blue-500 h-1 w-full"></div>
    <h3 class="text-3xl font-semibold py-4">{title}</h3>
    <p class="text-xl text-center px-6 text-gray-700">{description}</p>
</div>
