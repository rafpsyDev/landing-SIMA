---
interface Props {
    image: string;
    title: string;
    description: string;
}

const { image, title, description } = Astro.props;
---

<div class="flex flex-col items-center rounded-xl shadow-lg w-96 h-[500px]">
    <img
        src={image}
        class="w-full h-[400px] object-cover rounded-t-xl"
        alt={title}
    />
    <div class="bg-blue-500 h-1 w-full"></div>
    <h3 class="text-3xl font-semibold mt-4">{title}</h3>
    <p class="text-xl mt-4 text-center px-6 line-clamp-4 py-4">{description}</p>
</div>
